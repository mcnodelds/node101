{
    "name": "node101",
    "version": "1.0.0",
    "description": "",
    "main": "src/app.js",
    "scripts": {
        "hello": "node src/world.js",
        "start": "node --env-file-if-exists=.env.prod src/app.js",
        "dev": "pnpm run dev:node & pnpm run watch:css",
        "dev:node": "nodemon --exec node --env-file-if-exists=.env.dev src/app.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build:css": "pnpm exec tailwindcss -i ./src/tailwind.css -o ./public/css/style.css",
        "watch:css": "pnpm exec tailwindcss -i ./src/tailwind.css -o ./public/css/style.css --watch",
        "seed": "node src/seed.js"
    },
    "type": "module",
    "imports": {
        "#*": "./src/*"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@tailwindcss/cli": "^4.1.6",
        "@types/cookie-parser": "^1.4.8",
        "@types/express": "^5.0.0",
        "@types/express-session": "^1.18.1",
        "@types/pg": "^8.15.2",
        "daisyui": "^5.0.35",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-jsdoc": "^50.6.3",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^15.14.0",
        "nodemon": "^3.1.9",
        "postcss": "^8.5.3",
        "prettier": "^3.4.2",
        "stylelint": "^16.14.1",
        "tailwindcss": "^4.1.6",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cookie-parser": "^1.4.7",
        "eta": "^3.5.0",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "jose": "^6.0.11",
        "pg": "^8.16.0",
        "zod": "^3.24.4"
    },
    "packageManager": "pnpm@10.2.0",
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "endOfLine": "lf"
    },
    "stylelint": {
        "rules": {
            "annotation-no-unknown": true,
            "at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "tailwind",
                        "apply",
                        "plugin",
                        "theme"
                    ]
                }
            ],
            "block-no-empty": true,
            "color-no-invalid-hex": true,
            "comment-no-empty": true,
            "custom-property-no-missing-var-function": true,
            "declaration-block-no-duplicate-custom-properties": true,
            "declaration-block-no-duplicate-properties": true,
            "declaration-block-no-shorthand-property-overrides": true,
            "font-family-no-duplicate-names": true,
            "font-family-no-missing-generic-family-keyword": true,
            "function-calc-no-unspaced-operator": true,
            "function-linear-gradient-no-nonstandard-direction": true,
            "function-no-unknown": true,
            "keyframe-block-no-duplicate-selectors": true,
            "keyframe-declaration-no-important": true,
            "media-feature-name-no-unknown": true,
            "media-query-no-invalid": true,
            "named-grid-areas-no-invalid": true,
            "no-descending-specificity": true,
            "no-duplicate-at-import-rules": true,
            "no-duplicate-selectors": true,
            "no-empty-source": true,
            "no-invalid-double-slash-comments": true,
            "no-invalid-position-at-import-rule": true,
            "no-irregular-whitespace": true,
            "property-no-unknown": true,
            "selector-anb-no-unmatchable": true,
            "selector-pseudo-class-no-unknown": true,
            "selector-pseudo-element-no-unknown": true,
            "string-no-newline": true,
            "unit-no-unknown": true
        }
    }
}
